<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
        http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd ">

    <changeSet id="1" author="Simone Martelli">
        <comment>Init DB</comment>
        <createTable tableName="users">
            <column name="id" type="bigserial" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="email" type="character varying(320)">
                <constraints nullable="false" unique="true" uniqueConstraintName="users_email_constraint_unique"/>
            </column>
            <column name="password" type="character(88)">
                <constraints nullable="false"/>
            </column>
            <column name="algorithm" type="character varying(8)"/>
            <column name="last_login" type="timestamp with time zone"/>
        </createTable>
    </changeSet>

    <changeSet id="2" author="Simone Martelli">
        <comment>OAuth2 Client Credentials</comment>
        <sql>CREATE TYPE oauth_credential_status AS ENUM ('ACTIVE', 'SUSPENDED', 'REVOKED', 'EXPIRED');</sql>
        <createTable tableName="oauth_credentials">
            <column name="id" type="bigserial" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false" references="users(id)" foreignKeyName="fk_oauth_credentials_users"/>
            </column>
            <column name="client_id" type="character(36)">
                <constraints nullable="false" unique="true" uniqueConstraintName="oauth_credentials_client_id_constraint_unique"/>
            </column>
            <column name="client_secret" type="character(96)">
                <constraints nullable="false"/>
            </column>
            <column name="algorithm" type="character varying(8)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="oauth_credential_status">
                <constraints nullable="false"/>
            </column>
            <column name="last_used" type="timestamp with time zone"/>
            <column name="expire_at" type="timestamp with time zone"/>
            <column name="created_at" type="timestamp with time zone">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp with time zone">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="int" defaultValue="0">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
